{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Acorn - Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Acorn/bin/Debug/net10.0/Acorn.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Acorn",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Acorn - Attach to Process",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Acorn - Run & Debug",
            "configurations": ["Acorn - Debug"],
            "preLaunchTask": "build"
        }
    ]
}
